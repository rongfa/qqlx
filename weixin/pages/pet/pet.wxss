@import '../../common/component/nullTip/nullTip.wxss';

page {
  background: #f4f4f4;
  color: #555;
}

.pet-list {
  overflow: hidden;
}

.pet-img {
  margin-top: 80rpx;
  margin-left: 30rpx;
  width: 240rpx;
  height: 240rpx;
  animation: sway 30s ease-in-out infinite;
}

@keyframes sway {
  0% {
    transform: translate3d(0, 20rpx, 0) rotate(-15deg);
  }

  17% {
    transform: translate3d(0, 0rpx, 0) rotate(25deg);
  }

  34% {
    transform: translate3d(0, -20rpx, 0) rotate(-20deg);
  }

  50% {
    transform: translate3d(0, -10rpx, 0) rotate(15deg);
  }

  67% {
    transform: translate3d(0, 10rpx, 0) rotate(-25deg);
  }

  84% {
    transform: translate3d(0, 15rpx, 0) rotate(15deg);
  }

  100% {
    transform: translate3d(0, 20rpx, 0) rotate(-15deg);
  }
}

.pet-item {
  width: 710rpx;
  background: #fff;
  box-sizing: border-box;
  position: relative;
  margin: 20rpx auto;
  border-radius: 10rpx;
  overflow: hidden;
}

.item-info {
  height: 400rpx;
}

.pet-item-system::before {
  content: '';
  display: block;
  position: absolute;
  top: -80rpx;
  right: -80rpx;
  z-index: 4;
  width: 160rpx;
  height: 160rpx;
  transform: rotate(45deg);
  background-color: #7acfa6;
}

.pet-item-system::after {
  content: '攻略';
  display: block;
  position: absolute;
  top: 5px;
  right: 3px;
  z-index: 4;
  text-align: center;
  transform: rotate(45deg);
  color: #fff;
}

.pet-total {
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 10rpx;
  padding: 0 40rpx;
  background: #ddd;
}

.pet-progress {
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 10rpx;
  padding: 0 40rpx;
  background-color: #7acfa6;
}

.pet-detail {
  position: absolute;
  top: 10rpx;
  left: 310rpx;
  width: 380rpx;
  color: #7b7b7b;
  z-index: 4;
}

.pet-name {
  margin-left: 55rpx;
  position: relative;
  height: 40rpx;
  margin-top: 40rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  font-weight: bold;
}

.pet-name-edit {
  position: relative;
  height: 40rpx;
  margin-top: 40rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  font-weight: bold;
}

.progress-view {
  margin-top: 70rpx;
  position: relative;
  font-size: 32rpx;
  color: #6b6b6b;
}

.first {
  margin-top: 80rpx;
}

.cell-label {
  color: #6b6b6b;
  font-weight: bold;
  font-size: 30rpx;
}

.progress-left {
  position: absolute;
  bottom: 30rpx;
  font-size: 24rpx;
}

.progress-right {
  position: absolute;
  right: 15rpx;
  bottom: 30rpx;
}

.mine-ioc {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
}

.mine-ioc-edit {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
}

.pet-status {
  margin-top: 30rpx;
  position: relative;
  font-size: 32rpx;
  color: #6b6b6b;
}

.mine-text-label {
  margin-left: 45rpx;
  padding: 0 10rpx;
  font-size: 30rpx;
}

.describe {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 45rpx 30rpx;
  display: flex;
  flex-flow: column nowrap;
  color: #545454;
  line-height: 150%;
  background: #fff;
  margin-top: 15rpx;
}

.desc-content {
  padding-bottom: 10rpx;
}

.desc-content-title {
  font-weight: bold;
  padding-bottom: 10rpx;
}

.table {
  border: 1px solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 100%;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th, .td {
  padding: 10px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width: 100%;
}

.content {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 50rpx;
}

.iptbox {
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.ipt {
  width: 0;
  height: 0;
}
