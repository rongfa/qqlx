@import '../../common/style/button.wxss';

page {
  background: #f4f4f4;
  color: #555;
}

.container {
  background: #f4f4f4;
  padding: 0;
  font-size: 11pt;
}

.header {
  position: relative;
  width: 100%;
  height: 300rpx;
  text-align: center;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header .title {
  position: relative;
  width: 600rpx;
  height: 200rpx;
  z-index: 3;
  opacity: 0.95;
  line-height: 200rpx;
  font-size: 81rpx;
  font-weight: bold;
  color: #f4f4f4;
}

.black-cover {
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #aaa;
  opacity: 0.18;
}

.logo {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  border-radius: 10rpx;
  filter: blur(15px);
}

.content {
  flex: 1;
}

.version {
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 45rpx;
  box-sizing: border-box;
  font-size: 13pt;
  color: #666;
  border-bottom: 1px #e5e5e5 solid;
}

.version-title {
  flex: 1;
  display: flex;
  align-items: center;
}

.title-name {
  padding-right: 10rpx;
}

.version-text {
  font-size: 10pt;
  line-height: 100%;
  color: #7acfa6;
  border: 1px solid #7acfa6;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  margin-left: 10rpx;
  text-align: center;
}

.describe {
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 45rpx 30rpx;
  display: flex;
  flex-flow: column nowrap;
  color: #545454;
  line-height: 150%;
  background: #fff;
  margin-top: 15rpx;
  border-top: 1px #e5e5e5 solid;
  border-bottom: 1px #e5e5e5 solid;
}

.footer {
  display: flex;
  flex-direction: column;
  font-size: 9pt;
  line-height: 150%;
  text-align: center;
  padding: 50rpx 0 15rpx;
  color: #c2c2c2;
}

.footer-lanshan {
  height: 10pt;
  line-height: 10pt;
  font-size: 10pt;
  display: flex;
  align-items: stretch;
  justify-content: center;
  margin-bottom: 8rpx;
}

.footer-lanshan image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 5rpx;
  margin-top: -10rpx;
}

.enter-button {
  position: relative;
  padding: 60rpx;
}

.desc-content {
  padding-bottom: 10rpx;
}

.model-imput {
  margin: 30rpx 0rpx 30rpx 0rpx;
  padding: 10rpx 10rpx 10rpx 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #c2c2c2;
  border-radius: 3px;
  font-size: 45rpx;
}

.ico-phone {
  width: 50rpx;
  height: 50rpx;
  position: fixed;
  top: 135rpx;
  left: 70rpx;
}

.ico-money {
  width: 50rpx;
  height: 50rpx;
  position: fixed;
  top: 245rpx;
  left: 70rpx;
}
