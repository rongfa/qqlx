page {
  display: block;
  background-color: #fff;
  font-family: "微软雅黑";
  font-size: 28rpx;
}

.loading {
  position: fixed;
  left: 50%;
  top: 50%;
  width: 200rpx;
  height: 200rpx;
  margin: -100rpx 0 0 -100rpx;
  line-height: 300rpx;
  border-radius: 16rpx;
  background-position: center 40rpx;
  background-repeat: no-repeat;
  background-size: 80rpx;
  background-color: rgba(0, 0, 0, 0.85);
  color: #fff;
  text-align: center;
  font-size: 24rpx;
  animation: bounceIn 0.3s;
}
